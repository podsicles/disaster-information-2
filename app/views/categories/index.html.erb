<h1>Category</h1>

<%= link_to 'Posts', posts_path %>
<%= link_to 'New', new_category_path %>

<ul>
  <% @categories.each do |category| %>
    <li>
      <%= category.name %>
      <%= link_to :edit, edit_category_path(category) %>
      <%= button_to :delete, category_path(category), method: :delete %>
    </li>
  <% end %>
</ul>

