<% if user_signed_in? %>
  <h2> Hello, <%= current_user.email %>! </h2>
  <%= link_to 'Sign out', destroy_user_session_path, data: { 'turbo-method': :delete } %>
<% else %>
  <%= link_to 'Sign in', new_user_session_path %>
<% end %>

<h1>Makati Disaster Information</h1>

<%= link_to 'New', new_post_path %>
<%= link_to 'Categories', categories_path %>

<table>
  <thead>
  <td>Title</td>
  <td>Content</td>
  <td>Category</td>
  <td>Address</td>
  <td>User</td>
  <td>Action</td>
  </thead>
  <% @posts.each do |post| %>
    <tr>
      <td><%= post.title %></td>
      <td><%= post.content %></td>
      <td><%= post.categories.pluck(:name).join(',') %></td>
      <td><%= "#{post.region&.name} #{post.province&.name} #{post.address}" %></td>
      <td><%= post.user&.email %></td>
      <td>
        <%= link_to 'Show', post_path(post) %>
        <%= link_to 'Edit', edit_post_path(post) if user_signed_in? && post.user == current_user %>
        <%= link_to 'Comments', post_comments_path(post) %>
        <%= link_to 'New Comment', new_post_comment_path(post) %>
        <%= button_to 'Delete', post_path(post), method: :delete if user_signed_in? && post.user == current_user %>
      </td>
    </tr>
  <% end %>
</table>

<%= paginate @posts %>